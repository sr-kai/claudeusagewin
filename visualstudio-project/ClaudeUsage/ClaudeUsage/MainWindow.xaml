<ui:FluentWindow x:Class="ClaudeUsage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Claude Usage"
        Width="280"
        Height="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        KeyDown="Window_KeyDown">

    <Border CornerRadius="8" Padding="16,16,16,12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Claude Usage for WSL" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>

            <!-- Session Card -->
            <ui:Card Grid.Row="1" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Session" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock x:Name="SessionPercentText" Grid.Row="0" Grid.Column="1" Text="0%" FontSize="20" FontWeight="Bold" Foreground="#22C55E"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="5-hour window" FontSize="12" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,8"/>

                    <ProgressBar x:Name="SessionProgressBar" Grid.Row="2" Grid.ColumnSpan="2" Height="8" Value="0" Maximum="100" Margin="0,0,0,8"/>

                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Clock24" FontSize="14" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="SessionResetText" Text="Resets in --" FontSize="12" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- Weekly Card -->
            <ui:Card Grid.Row="2" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Weekly" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock x:Name="WeeklyPercentText" Grid.Row="0" Grid.Column="1" Text="0%" FontSize="20" FontWeight="Bold" Foreground="#22C55E"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="7-day window" FontSize="12" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,8"/>

                    <ProgressBar x:Name="WeeklyProgressBar" Grid.Row="2" Grid.ColumnSpan="2" Height="8" Value="0" Maximum="100" Margin="0,0,0,8"/>

                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Clock24" FontSize="14" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="WeeklyResetText" Text="Resets in --" FontSize="12" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- Controls -->
            <Grid Grid.Row="3" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Launch at Login" VerticalAlignment="Center"/>
                <ui:ToggleSwitch x:Name="LaunchAtLoginToggle" Grid.Column="1" Checked="LaunchAtLoginToggle_Changed" Unchecked="LaunchAtLoginToggle_Changed"/>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="5" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="LastUpdatedText" Text="Updated --" FontSize="11" Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button x:Name="RefreshButton" Icon="{ui:SymbolIcon ArrowClockwise24}" Appearance="Transparent" Padding="8" Margin="0,0,4,0" ToolTip="Refresh" Click="RefreshButton_Click"/>
                    <ui:Button x:Name="GitHubButton" Icon="{ui:SymbolIcon Globe24}" Appearance="Transparent" Padding="8" Margin="0,0,4,0" ToolTip="GitHub" Click="GitHubButton_Click"/>
                    <ui:Button x:Name="CloseButton" Icon="{ui:SymbolIcon Dismiss24}" Appearance="Transparent" Padding="8" ToolTip="Close" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</ui:FluentWindow>
